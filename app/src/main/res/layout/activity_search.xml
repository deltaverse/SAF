<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SearchActivity">
    <LinearLayout
        android:id="@+id/search_layout_include"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            layout="@layout/search_layout_search"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/movie_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/search_icon_main"
            app:layout_constraintBottom_toBottomOf="@id/search_icon_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_heading"
            android:padding="12dp"
            android:textColor="#FFF"
            android:textSize="18sp"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Movies" />
        <ImageView
            android:id="@+id/sliding_dot"
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:scaleType="center"
            android:src="@drawable/round_bg"
            app:layout_constraintTop_toBottomOf="@id/movie_heading"
            app:layout_constraintStart_toStartOf="@id/movie_heading"
            app:layout_constraintEnd_toEndOf="@id/movie_heading"
            />
        <TextView
            android:id="@+id/tv_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/search_icon_main"
            app:layout_constraintBottom_toBottomOf="@id/search_icon_main"
            app:layout_constraintStart_toEndOf="@id/movie_heading"
            app:layout_constraintEnd_toStartOf="@id/my_list_heading"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:fontFamily="@font/comfortaa_light"
            android:text="TV" />
        <TextView
            android:id="@+id/my_list_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/search_icon_main"
            app:layout_constraintBottom_toBottomOf="@id/search_icon_main"
            app:layout_constraintStart_toEndOf="@id/tv_heading"
            app:layout_constraintEnd_toStartOf="@id/search_icon_main"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="#FFF"
            android:fontFamily="@font/comfortaa_light"
            android:text="My List" />
        <ImageView
            android:id="@+id/search_icon_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_search_real_black_24dp"
            android:background="@drawable/round_bg"
            android:padding="8dp"
            android:layout_margin="8dp"
            />
        <LinearLayout
            android:id="@+id/movie_tv_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@id/search_icon_main"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/movie_tv_home"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>